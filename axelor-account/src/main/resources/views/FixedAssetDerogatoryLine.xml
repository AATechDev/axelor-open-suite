<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">

	<grid name="fixed-asset-fiscal-line-grid"
		title="Fixed asset fiscal lines"
		model="com.axelor.apps.account.db.FixedAssetDerogatoryLine">
		<field name="depreciationDate"/>
		<field name="depreciationAmount" />
	    <field name="fiscalDepreciationAmount" />
		<field name="derogatoryAmount" />
		<field name="incomeDepreciationAmount" />
		<field name="derogatoryBalanceAmount" />
		<field name="statusSelect"/>	
	</grid>

	<form name="fixed-asset-fiscal-line-form"
		title="Fixed asset fiscal line"
		model="com.axelor.apps.account.db.FixedAssetDerogatoryLine">
		<panel name="mainPanel">
	      <field name="statusSelect" showTitle="false" readonly="true" colSpan="12" widget="NavSelect"/>
	      <field name="fiscalDepreciationAmount"/>
	      <field name="derogatoryAmount"/>
	      <field name="incomeDepreciationAmount"/>
	      <field name="derogatoryBalanceAmount"/>
	      <field name="derogatoryDepreciationMove" showIf="statusSelect == 2" form-view="move-form" grid-view="move-grid"/>
	    </panel>
	    <panel name="actionsPanel" hideIf="statusSelect == 2">
	      <button name="realizeBtn" title="Realize" onClick="save;action-fixed-asset-line-method-realize"/>
	    </panel>
	</form>

</object-views>