<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <grid name="value-mapper-grid" title="Mapper" model="com.axelor.studio.db.ValueMapper">
  	  <button name="btnOpenMapper" onClick="action-value-mapper-open-mapper" title="Open mapper" icon="fa-edit" />
  	  <field name="name" />
  	  <field name="targetField" />
  	  <field name="sourceField" />
  </grid>
  
  <form name="value-mapper-form" title="Mapper" model="com.axelor.studio.db.ValueMapper"  width="large">
      <panel name="mainPanel">
      	<field name="name" />
      	<button name="btnOpenMapper" onClick="save,action-value-mapper-open-mapper" title="Open mapper" colSpan="2" icon="fa-edit" />
      	<field name="targetField" readonly="true"/>
  	  	<field name="sourceField" readonly="true" />
      	<field name="script" colSpan="12" readonly="true" widget="CodeEditor" x-code-syntax="groovy" />	
      	<field name="scriptMeta" colSpan="12" hidden="true" />	
	  </panel>
  </form>
  
  <action-view name="action-value-mapper-open-mapper" title="Mapper">
  	<view type="html" name="mapper/?id={{_id}}&amp;model=com.axelor.studio.db.ValueMapper&amp;resultField=script&amp;resultMetaField=scriptMeta&amp;targetField=targetField&amp;sourceField=sourceField"/>
  </action-view>
  
</object-views>